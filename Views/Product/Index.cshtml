@model List<Product> 
@{
    ViewData["Title"] = "Electronic Shop";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Minimal Shop E-Commerce</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
</head>
<body class="bg-gray-50">

    <header class="bg-white shadow-lg sticky top-0 z-40">
        <div class="container mx-auto px-4 py-4 flex justify-between items-center">
            <h1 class="text-3xl font-extrabold text-indigo-600 flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-7 h-7 mr-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4" /><polyline points="17 9 12 4 7 9" /><line x1="12" x2="12" y1="4" y2="16" /></svg>
                ELECTRONICS STORE
            </h1>

            <a href="/Cart" class="relative p-2 rounded-full bg-indigo-500 text-white hover:bg-indigo-600 transition duration-150 shadow-md" aria-label="Go to shopping cart">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="9" cy="21" r="1" /><circle cx="20" cy="21" r="1" /><path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6" /></svg>

                
            </a>
        </div>
    </header>

    <main class="container mx-auto px-4 py-8">
        <h2 class="text-4xl font-bold text-gray-800 mb-8 border-b pb-2"></h2>

        <div id="productCatalog" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">

            @* We use hardcoded products here for simplicity, but in a real MVC app, you'd iterate over Model. *@
            @{
                var placeholderProducts = new List<dynamic>
                        {
                        new { Id = 1, Name = "Laptop", Price = 999.99M, Description = "Powerful machine for all your needs.", ImageUrl = "https://placehold.co/400x300/1e293b/e2e8f0?text=Laptop" },
                        new { Id = 2, Name = "Keyboard", Price = 75.50M, Description = "Premium mechanical tactile keyboard.", ImageUrl = "https://placehold.co/400x300/1e293b/e2e8f0?text=Keyboard" },
                        new { Id = 3, Name = "Mouse", Price = 25.00M, Description = "Wireless ergonomic mouse.", ImageUrl = "https://placehold.co/400x300/1e293b/e2e8f0?text=Mouse" },
                        new { Id = 4, Name = "Monitor", Price = 450.00M, Description = "4K UHD monitor for stunning visuals and color accuracy.", ImageUrl = "https://placehold.co/400x300/1e293b/e2e8f0?text=Monitor" },
                        };
            }

            @foreach (var product in placeholderProducts)
            {
                <div class="bg-white shadow-xl rounded-xl overflow-hidden transform transition duration-300 hover:shadow-2xl hover:-translate-y-1">
                    <img src="@product.ImageUrl"
                         alt="@product.Name"
                         class="w-full h-48 object-cover bg-gray-200" />
                    <div class="p-4 flex flex-col h-48">
                        <h3 class="text-lg font-semibold text-gray-800 truncate">@product.Name</h3>
                        <p class="text-sm text-gray-500 mb-3 flex-grow overflow-hidden">@product.Description</p>
                        <div class="flex justify-between items-center mt-auto">
                            <span class="text-2xl font-bold text-indigo-600">$@product.Price.ToString("F2")</span>

                            <form asp-controller="Cart" asp-action="AddToCart" method="post">
                                <input type="hidden" name="id" value="@product.Id" />
                                <button type="submit"
                                        class="add-to-cart-btn flex items-center bg-indigo-600 text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-indigo-700 transition duration-150 shadow-md"
                                        aria-label="Add @product.Name to cart">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 mr-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="9" cy="21" r="1" /><circle cx="20" cy="21" r="1" /><path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6" /></svg>
                                    Add to Cart
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    </main>

</body>
</html>
